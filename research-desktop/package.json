{
  "name": "academic-research-assistant",
  "version": "1.0.0",
  "description": "Desktop app for academic research with knowledge graphs and PDF processing",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:vite\"",
    "dev:electron": "electron .",
    "dev:vite": "vite",
    "build": "vite build",
    "build:mac": "electron-builder --mac",
    "build:mas": "electron-builder --mac --publish=never --config.mac.target=mas",
    "dist": "npm run build && electron-builder",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "academic",
    "research",
    "pdf",
    "knowledge-graph",
    "electron"
  ],
  "author": "Academic Research Team",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.4",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.8"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@llm-ui/code": "^0.13.3",
    "@llm-ui/markdown": "^0.13.3",
    "@llm-ui/react": "^0.13.3",
    "cytoscape": "^3.28.1",
    "cytoscape-dagre": "^2.5.0",
    "cytoscape-fcose": "^2.2.0",
    "d3": "^7.8.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-icons": "^5.5.0",
    "shiki": "^1.29.2"
  },
  "build": {
    "appId": "com.research.academic-assistant",
    "productName": "Academic Research Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "dist/**/*",
      "assets/**/*"
    ],
    "mac": {
      "icon": "assets/icons/icon.icns",
      "category": "public.app-category.education",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "title": "Academic Research Assistant",
      "backgroundColor": "#1f2937"
    }
  }
}
